<h1>Articles detail</h1>


    <h1>
      <%= @article.title %>  
    </h1>
    <p>
        <%= @article.body%>
    </p>
    <ul>
      <li><%= link_to "Edit", edit_article_path(@article) %></li>
      <li><%= link_to "Destroy", article_path(@article), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                      } %></li>
    </ul>
    <h2>Comments</h2>
    <% @article.comments.each do |item| %>
      <p>
        <strong>Commenter</strong>
        <%= item.commenter %>
      </p>
        <p>
        <strong>Comment</strong>
        <%= item.comment %>
      </p>
    <% end %>
    <h2>Add a comment:</h2>
    <%= render "comments/formAddComment", article: @article %>

